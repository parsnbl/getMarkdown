{
    "env": { 
     "browser": true, 
      "es2020": true,
      "webextensions": true,
      "jasmine": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:jasmine/recommended"
    ],
    "parserOptions": { 
        "ecmaVersion": "latest", 
        "sourceType": "module" 
    },
    "settings": { 
        "react": { 
            "version": "18.2" 
        } 
    },
    "plugins": ["react-refresh", "jasmine"],
    "rules": {
      "react-refresh/only-export-components": "warn"
    }
}  