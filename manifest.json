{
  "manifest_version": 3,
  "name": "Markdone",
  "description": "WIP",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "offscreen",
    "clipboardWrite",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "src/scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": [
        "src/scripts/content.js"
        ],
        "run_at": "document_start"
      }
    ],
  "host_permissions": [
    "https://*/*", 
    "http://*/*"
  ],
  "externally_connectable": {
    "matches": ["https://*/*"]
  }
}